<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sauca.appfc.Intervencao.FragCliente">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="bottom|top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LL_Buttons">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:id="@+id/BT_Inicio"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:elevation="@dimen/abc_action_bar_stacked_max_height"
                android:enabled="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fim"
                android:id="@+id/BT_Fim"
                android:textStyle="bold"
                android:textColor="#ff0000"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:focusable="true"
                android:elegantTextHeight="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Empresa"
            android:id="@+id/TV_Empresa"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/LL_Buttons" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Morada"
            android:id="@+id/TV_Morada"
            android:textSize="20dp"
            android:lines="2"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/IB_Mapa"
            android:layout_marginLeft="15dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IB_Mapa"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_dialog_map"
            android:layout_below="@+id/TV_Empresa"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_toRightOf="@+id/TV_Morada" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Local"
            android:id="@+id/TV_Local"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/TV_Morada"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:longClickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nome"
            android:id="@+id/TV_PhoneName"
            android:layout_below="@+id/TV_Local"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:textSize="20sp"
            android:layout_alignParentEnd="false"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contacto"
            android:id="@+id/TV_Phone"
            android:textSize="20dp"
            android:inputType="phone"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/IB_Phone"
            android:layout_alignBottom="@+id/IB_Phone"
            android:layout_below="@+id/TV_PhoneName" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IB_Phone"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/stat_sys_phone_call"
            android:layout_below="@+id/TV_PhoneName"
            android:layout_alignParentRight="true"
            android:textAlignment="gravity"
            android:foregroundGravity="center_vertical"
            android:layout_alignParentEnd="false"
            android:layout_toRightOf="@+id/TV_Phone" />

    </RelativeLayout>

</FrameLayout>
